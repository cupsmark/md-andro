<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/base_blue"
        android:id="@+id/req_merchant_topbar"
        android:layout_alignParentTop="true">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_close_white"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/app_name"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:id="@+id/req_merchant_imagebutton_close"/>

        <com.meetdesk.view.UIText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/base_white"
            android:layout_centerInParent="true"
            app:fontType="bold"
            android:text="@string/pagetitle_req_merchant"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/req_merchant_topbar"
        android:layout_above="@+id/req_merchant_send">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/border_bottom_white_old"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/req_merchant_section_email">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">

                        <com.meetdesk.view.UIText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/base_text_normal"
                            android:text="@string/fragment_rentout_caption_email"
                            android:textSize="13sp"
                            app:fontType="bold"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:textAllCaps="true" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/icon_req_merchant_email"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <com.meetdesk.view.UIEditText
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:textSize="14sp"
                        android:textColor="@color/base_black"
                        android:background="@android:color/transparent"
                        android:inputType="textEmailAddress"
                        android:id="@+id/req_merchant_edittext_email"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/border_bottom_white_old"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/req_merchant_section_address">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">

                        <com.meetdesk.view.UIText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/base_text_normal"
                            android:text="@string/fragment_rentout_caption_address"
                            android:textSize="13sp"
                            app:fontType="bold"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:textAllCaps="true" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/icon_req_merchant_address"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <com.meetdesk.view.UIEditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:textSize="14sp"
                        android:textColor="@color/base_black"
                        android:background="@android:color/transparent"
                        android:inputType="textMultiLine"
                        android:gravity="left|top"
                        android:id="@+id/req_merchant_edittext_address"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/border_bottom_white_old"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/req_merchant_section_phone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">

                        <com.meetdesk.view.UIText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/base_text_normal"
                            android:text="@string/fragment_rentout_caption_phone"
                            android:textSize="13sp"
                            app:fontType="bold"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:textAllCaps="true" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/icon_req_merchant_phone"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <com.meetdesk.view.UIEditText
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:textSize="14sp"
                        android:textColor="@color/base_black"
                        android:background="@android:color/transparent"
                        android:inputType="phone"
                        android:id="@+id/req_merchant_edittext_phone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/border_bottom_white_old"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/req_merchant_section_merchantname">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">

                        <com.meetdesk.view.UIText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/base_text_normal"
                            android:text="@string/fragment_rentout_caption_name"
                            android:textSize="13sp"
                            app:fontType="bold"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:textAllCaps="true" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/icon_req_merchant_merchantname"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <com.meetdesk.view.UIEditText
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:textSize="14sp"
                        android:textColor="@color/base_black"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:id="@+id/req_merchant_edittext_merchantname"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/border_bottom_white_old"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/req_merchant_section_amenities">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">

                        <com.meetdesk.view.UIText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/base_text_normal"
                            android:text="@string/fragment_rentout_caption_amenities"
                            android:textSize="13sp"
                            app:fontType="bold"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:textAllCaps="true" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/icon_req_merchant_amenities"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <com.meetdesk.view.UIEditText
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:textSize="14sp"
                        android:textColor="@color/base_black"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:id="@+id/req_merchant_edittext_amenities"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/border_bottom_white_old"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/req_merchant_section_detail">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">

                        <com.meetdesk.view.UIText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/base_text_normal"
                            android:text="@string/fragment_rentout_caption_space_detail"
                            android:textSize="13sp"
                            app:fontType="bold"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:textAllCaps="true" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/icon_req_merchant_detail"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <com.meetdesk.view.UIEditText
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:textSize="14sp"
                        android:textColor="@color/base_black"
                        android:gravity="left|top"
                        android:background="@android:color/transparent"
                        android:inputType="textMultiLine"
                        android:id="@+id/req_merchant_edittext_detail"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/border_bottom_white_old"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/req_merchant_section_message">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">

                        <com.meetdesk.view.UIText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/base_text_normal"
                            android:text="@string/fragment_rentout_caption_message"
                            android:textSize="13sp"
                            app:fontType="bold"
                            android:textAllCaps="true"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/icon_req_merchant_message"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <com.meetdesk.view.UIEditText
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:textSize="14sp"
                        android:textColor="@color/base_black"
                        android:background="@android:color/transparent"
                        android:inputType="textMultiLine"
                        android:gravity="left|top"
                        android:id="@+id/req_merchant_edittext_message"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <com.meetdesk.view.UIButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/base_blue"
        android:textColor="@color/base_white"
        android:textSize="18sp"
        android:text="SEND"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:id="@+id/req_merchant_send"/>

</RelativeLayout>